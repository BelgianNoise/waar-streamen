{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "pnpm i --frozen-lockfile",
    "build": "turbo build",
    "build:all": "pnpm build",
    "start": "turbo --continue --parallel start",
    "start:dev": "turbo --continue --parallel start:dev",
    "lint": "turbo lint --continue",
    "lint:fix": "turbo lint --continue --fix",
    "test": "turbo test --concurrency=2 --continue"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "turbo": "^1.9.6",
    "typescript": "^5.0.4"
  },
  "packageManager": "pnpm@8.4.0"
}